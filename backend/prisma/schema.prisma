generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  password          String
  createdAt         DateTime           @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt         DateTime           @updatedAt @map("updated_at") @db.Timestamptz(3)
  sessions          Session[]          @relation("ProfileSessions")
  verificationCodes VerificationCode[] @relation("SessionCodes")
  apiKeys           ApiKey[]           @relation("ProfileApiKeys")
  feeds             Feed[]             @relation("ProfileFeeds")
  items             Item[]             @relation("ProfileItems")

  @@map("profiles")
}

model Session {
  id                Int                @id @default(autoincrement())
  scope             String
  userAgent         String             @map("user_agent")
  expiresAt         DateTime           @default(dbgenerated("NOW() + INTERVAL '4 DAYS'")) @map("expires_at") @db.Timestamptz(3)
  endedAt           DateTime?          @map("ended_at") @db.Timestamptz(3)
  createdAt         DateTime           @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt         DateTime           @updatedAt @map("updated_at") @db.Timestamptz(3)
  profile           Profile            @relation("ProfileSessions", fields: [profileId], references: [id], onDelete: Cascade)
  profileId         Int                @map("profile_id")
  verificationCodes VerificationCode[] @relation("SessionCodes")
  apiKeyId          Int?               @map("api_key_id")
  apiKey            ApiKey?            @relation("ApiKeySession")

  @@map("sessions")
}

enum CodeType {
  LOGIN
  LOGOUT_ALL
  PASSWORD_RESET
  DELETE_PROFILE
  CREATE_API_KEY
}

model VerificationCode {
  id        Int       @id @default(autoincrement())
  type      CodeType  @default(LOGIN)
  value     String
  usedAt    DateTime? @map("used_at") @db.Timestamptz(3)
  expiresAt DateTime  @default(dbgenerated("NOW() + INTERVAL '8 HOURS'")) @map("expires_at") @db.Timestamptz(3)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz(3)
  profile   Profile?  @relation("SessionCodes", fields: [profileId], references: [id], onDelete: SetNull)
  profileId Int?      @map("profile_id")
  session   Session?  @relation("SessionCodes", fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId Int?      @map("session_id")

  @@map("verification_codes")
}

model ApiKey {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  value     String?
  origin    String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)
  profile   Profile  @relation("ProfileApiKeys", fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int      @unique @map("profile_id")
  session   Session? @relation("ApiKeySession", fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId Int?     @unique @map("session_id")

  @@map("api_keys")
}

model Feed {
  id         Int         @id @default(autoincrement())
  path       String      @unique
  profileId  Int
  profile    Profile     @relation("ProfileFeeds", fields: [profileId], references: [id], onDelete: Cascade)
  components Component[] @relation("FeedComponents")

  @@map("feeds")
}

enum ComponentType {
  BASIC_BLOCK
}

model Component {
  id        Int           @id @default(autoincrement())
  type      ComponentType @default(BASIC_BLOCK)
  title     String?
  config    Json          @default("{}")
  createdAt DateTime      @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime      @updatedAt @map("updated_at") @db.Timestamptz(3)
  feed      Feed          @relation("FeedComponents", fields: [feedId], references: [id], onDelete: Cascade)
  feedId    Int

  @@map("components")
}

model Item {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  content   String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)
  author    Profile? @relation("ProfileItems", fields: [authorId], references: [id], onDelete: SetNull)
  authorId  Int?
  tags      Tag[]

  @@map("items")
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]

  @@map("tags")
}
