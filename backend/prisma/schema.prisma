generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  password          String
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  sessions          Session[]          @relation("ProfileSessions")
  verificationCodes VerificationCode[] @relation("SessionCodes")

  @@map("profiles")
}

model Session {
  id                Int                @id @default(autoincrement())
  userAgent         String             @map("user_agent")
  autoRefresh       Boolean            @default(false) @map("auto_refresh")
  scope             String             @default("")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  expiresAt         DateTime           @default(dbgenerated("NOW() + INTERVAL '2 DAYS'")) @map("expires_at")
  profile           Profile            @relation("ProfileSessions", fields: [profileId], references: [id], onDelete: Cascade)
  profileId         Int                @map("profile_id")
  verificationCodes VerificationCode[] @relation("SessionCodes")

  @@map("sessions")
}

enum CodeType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  LOGOUT_ALL
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  type      CodeType @default(EMAIL_VERIFICATION)
  value     String
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  expiresAt DateTime @default(dbgenerated("NOW() + INTERVAL '8 HOURS'")) @map("expires_at")
  profile   Profile  @relation("SessionCodes", fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int      @map("profile_id")
  session   Session  @relation("SessionCodes", fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId Int      @map("session_id")

  @@map("verification_codes")
}
